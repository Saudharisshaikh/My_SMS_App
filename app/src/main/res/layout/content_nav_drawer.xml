<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NavDrawer"
    tools:showIn="@layout/app_bar_nav_drawer"
    >


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My SMS APP"
    android:textColor="@color/white"
    android:textSize="40sp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:background="@color/my"
    />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/emial"
      />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Push me"
      android:textColor="@color/white"
      android:textSize="30sp"
      android:layout_gravity="center"
      android:background="@color/my"
      />


  <Button
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:id="@+id/mysheet"
      android:onClick="myownbottomsheet"
      android:layout_gravity="center"
      android:background="@drawable/belel"
      />




</LinearLayout>